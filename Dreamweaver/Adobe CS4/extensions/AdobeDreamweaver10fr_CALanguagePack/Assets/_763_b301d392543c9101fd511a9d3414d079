if (screen.fontSmoothingEnabled) {
    styleFile = "css/corpStyleFancy.css";
}
document.write("&lt;link type='text/css' rel='stylesheet' href='"  +
    styleFile + "'&gt;");</pre>
						</span></td>
				</tr>
				<tr>
					<td valign="top" colspan="2" class="CLEARSEPARATION">&#160;</td>
